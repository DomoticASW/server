{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "main",
    "develop"
  ],
  "packageRules": [
    {
      "description": "Enabling automerge for every update that is stable and non-major",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Disabling renovate for dev dependencies on the default branch",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "enabled": false
    },
    {
      "description": "Disabling renovate for prod dependencies on the develop branch",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchBaseBranches": [
        "develop"
      ],
      "enabled": false
    }
  ]
}