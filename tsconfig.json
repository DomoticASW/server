// https://github.com/tsconfig/bases/blob/main/bases/node-lts.json
{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node LTS (22)",
    "_version": "22.0.0",
    "compilerOptions": {
        "lib": [
            "es2023",
            "dom"
        ],
        "module": "es2022",
        "target": "esnext",
        "isolatedModules": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}